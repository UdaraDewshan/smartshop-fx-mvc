    <!-- TITLE -->
    <Text fill="white" layoutX="230" layoutY="55" text="Dashboard">
        <font><Font name="Segoe UI Bold" size="36" /></font>
    </Text>

    <!-- FIRST ROW -->
    <HBox layoutX="59.0" layoutY="110.0" prefWidth="566.0" spacing="30">

        <!-- CUSTOMER -->
        <StackPane fx:id="cardCustomer">
            <Rectangle arcHeight="25" arcWidth="25" fill="#ffffff33" height="190" stroke="white" style="-fx-stroke-width: 0.5;" width="250">
                <effect><DropShadow color="#00000055" radius="15" /></effect>
            </Rectangle>

            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="90.0" fitWidth="200.0">
                    <image><Image url="@../image/customerManagement.png" /></image>
                </ImageView>

                <Text fill="white" text="Customer Management">
                    <font><Font size="20" /></font>
                </Text>

                <Button fx:id="btnCustomer" styleClass="card-button" text="Open" />
            </VBox>
        </StackPane>

        <!-- ITEM -->
        <StackPane fx:id="cardItem">
            <Rectangle arcHeight="25" arcWidth="25" fill="#ffffff33" height="190" stroke="white" style="-fx-stroke-width: 0.5;" width="250">
                <effect><DropShadow color="#00000055" radius="15" /></effect>
            </Rectangle>

            <VBox alignment="CENTER" prefHeight="2.0" prefWidth="62.0" spacing="10">
                <ImageView fitHeight="90.0" fitWidth="200.0">
                    <image><Image url="@../image/itemManagemrnt.png" /></image>
                </ImageView>

                <Text fill="white" text="Item Management">
                    <font><Font size="20" /></font>
                </Text>

                <Button fx:id="btnItem" styleClass="card-button" text="Open" />
            </VBox>
        </StackPane>

    </HBox>

    <!-- SECOND ROW -->
    <HBox layoutX="56.0" layoutY="330.0" prefWidth="538.0" spacing="30">

        <!-- ORDER -->
        <StackPane fx:id="cardOrder">
            <Rectangle arcHeight="25" arcWidth="25" fill="#ffffff33" height="190" stroke="white" style="-fx-stroke-width: 0.5;" width="250">
                <effect><DropShadow color="#00000055" radius="15" /></effect>
            </Rectangle>

            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="90" fitWidth="200">
                    <image><Image url="@../image/orderManagement.png" /></image>
                </ImageView>

                <Text fill="white" text="Order Management">
                    <font><Font size="20" /></font>
                </Text>

                <Button fx:id="btnOrder" styleClass="card-button" text="Open" />
            </VBox>
        </StackPane>

        <!-- ORDER DETAIL -->
        <StackPane fx:id="cardOrderDetail">
            <Rectangle arcHeight="25" arcWidth="25" fill="#ffffff33" height="190" stroke="white" style="-fx-stroke-width: 0.5;" width="250">
                <effect><DropShadow color="#00000055" radius="15" /></effect>
            </Rectangle>

            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="90" fitWidth="200">
                    <image>
                  <Image url="@../image/orderDetailManagement.png" />
               </image>
                </ImageView>

                <Text fill="white" text="Order Detail Management">
                    <font><Font size="20" /></font>
                </Text>

                <Button fx:id="btnOrderDetail" styleClass="card-button" text="Open" />
            </VBox>
        </StackPane>

    </HBox>
