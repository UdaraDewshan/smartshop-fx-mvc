   <Circle layoutX="322.0" layoutY="304.0" radius="110.0" stroke="transparent">
      <fill>
         <LinearGradient endX="1" endY="1" startX="0" startY="0">
            <stops>
               <Stop color="#4DA3FF" offset="0" />
               <Stop color="#0052CC" offset="1" />
